{{ form_start(form) }}
    {{ form_errors(form) }}
    <label class="form-label">First name</label>
    <div class="input-group mb-3">
        {{ form_widget(form.firstname, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form.firstname) }}
    </div>
    <label class="form-label">Last name</label>
    <div class="input-group mb-3">
        {{ form_widget(form.lastname, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form.lastname) }}
    </div>
    <label class="form-label">Email</label>
    <div class="input-group mb-3">
        {{ form_widget(form.email, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <label class="form-label">Message</label>
    <div class="input-group mb-3">
        {{ form_widget(form.content, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form.content) }}
    </div>
    <button class="btn btn-primary" id="create-new-submit-button">
        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
        <span class="text-state">{{ button_label|default('Save post') }}</span>
    </button>
{{ form_end(form) }}
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="formToastSuccess" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#157347"></rect></svg>
      <strong class="me-auto">Guestbook</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      Congratulations, the post has been saved.
    </div>
  </div>
</div>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="formToastFailure" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#dc3545"></rect></svg>
      <strong class="me-auto">Guestbook</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      Shoot, an error occured. Please try again later.
    </div>
  </div>
</div>