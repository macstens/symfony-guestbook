{% extends 'base.html.twig' %}

{% block title %}Guestbook{% endblock %}

{% block body %}

<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">Welcome to our Guestbook</h2>
    </div>
    <div class="card-body">
      <div class="list-group">
          {% for guestbook in guestbooks %}
            <div class="list-group-item">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{ guestbook.firstname }} {{ guestbook.lastname }}</h5>
                <small>Created: {{ guestbook.getCreatedAt().format('d.m.Y h:i') }}</small>
                <small>Updated: {{ guestbook.getUpdatedAt().format('d.m.Y h:i') }}</small>
              </div>
              <p class="mb-1">{{ guestbook.content }}</p>
              <small>{{ guestbook.email }}</small>
            </div>
          {% else %}
            <div class="list-group-item">
              <p class="mb-1">No records found :(</p>
            </div>
          {% endfor %}
      </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-form-create">Create new post</button>
    </div>
</div>
<div class="modal fade" tabindex="-1" id="modal-form-create" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create new guestbook post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="form-guestbook-new"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close and back to list</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}
