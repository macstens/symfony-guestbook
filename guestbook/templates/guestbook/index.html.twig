{% extends 'base.html.twig' %}

{% block title %}Guestbook{% endblock %}

{% block body %}

<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">Welcome to our Guestbook</h2>
    </div>
    <div class="card-body">
        <table class="table">
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Content</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guestbook in guestbooks %}
            <tr>
                <td>{{ guestbook.firstname }}</td>
                <td>{{ guestbook.lastname }}</td>
                <td>{{ guestbook.content }}</td>
                <td>{{ guestbook.email }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_guestbook_show', {'id': guestbook.id}) }}">Show</a>
                    <a class="btn btn-secondary" href="{{ path('app_guestbook_edit', {'id': guestbook.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found :(</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="{{ path('app_guestbook_new') }}">Create new post</a>
    </div>
</div>

{% endblock %}
