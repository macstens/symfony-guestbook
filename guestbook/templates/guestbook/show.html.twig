{% extends 'base.html.twig' %}

{% block title %}Guestbook{% endblock %}

{% block body %}

<div class="card mt-3">
    <div class="card-header">
        <h2 class="card-title">Show post</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped">
        <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ guestbook.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ guestbook.lastname }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ guestbook.content }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ guestbook.email }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="card-footer">
        <a class="btn btn-secondary" href="{{ path('app_guestbook_index') }}">Back to list</a>

        <a class="btn btn-primary" href="{{ path('app_guestbook_edit', {'id': guestbook.id}) }}">Edit</a>

        {{ include('guestbook/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
